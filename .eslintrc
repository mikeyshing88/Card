{
  "parser": "babel-eslint",
  "extends": "airbnb",
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "globals": {
    "__DEV__": true,
    "describe": true,
    "it": true,
    "before": true,
    "after": true,
    "beforeEach": true,
    "afterEach": true,
    "expect": true,
    "browser": true,
    "by": true,
    "element": true
  },
  "plugins": [
    "react"
  ],
  "rules": {
    "comma-dangle": ["error", "never"],
    "max-len": ["error", 100, 4, {"ignoreUrls": true, "ignoreStrings": true, "ignoreTemplateLiterals": true}],
    "no-param-reassign": 0,
    "func-names": 0,
    "arrow-body-style": 0,
    "linebreak-style": 0,
    "react/jsx-filename-extension": [1, {
      "extensions": [".js", ".jsx"]
    }],
    "react/prefer-stateless-function": 0,
    "one-var": 0,
    "global-require": 0,
    "new-cap": ["error", {"newIsCap": true}],
    "import/no-dynamic-require": 0,
    "import/no-named-as-default": 0,
    "jsx-a11y/href-no-hash": 0,
    "react/jsx-no-undef": 0,
    "react/forbid-prop-types": 0,
    "react/no-array-index-key": 0,
    "react/no-danger": 0,
    "class-methods-use-this": 0,
    "react/jsx-no-bind": [2, {
      "ignoreRefs": false,
      "allowArrowFunctions": true,
      "allowBind": true
    }]
  }
}
